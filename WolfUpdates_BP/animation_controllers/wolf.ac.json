{
  "format_version": "1.10.0",
  "animation_controllers": {
    //==========================================================
    //
    // Default Controller
    //
    //==========================================================
    "controller.animation.wolf.load": {
      "initial_state": "loaded",
      "states": {
        "loaded": {
          "transitions": [
            {
              "spawn_bark_baby": "query.is_baby"
            },
            {
              "spawn_1_0": "query.variant == 100"
            },
            {
              "spawn_1_2": "query.variant == 102"
            },
            {
              "spawn_1_4": "query.variant == 104"
            },
            {
              "spawn_1_6": "query.variant == 106"
            },
            {
              "spawn_1_8": "query.variant == 108"
            },
            {
              "spawn_2_0": "query.variant == 110"
            }
          ]
        },

        "spawn_bark_baby": {
          "on_entry": [
            //"/say Size 'Baby'",
            "/playsound mob.wolf.bark @a ^0 ^0 ^0 1 2"
          ],
          "transitions": [
            {
              "loaded": "!query.is_baby"
            }
          ]
        },

        "spawn_1_0": {
          "on_entry": [
            //"/say Size 1_0",
            "/playsound mob.wolf.bark @a ^0 ^0 ^0 1 1"
          ],
          "transitions": [
            {
              "loaded": "0"
            }
          ]
        },

        "spawn_1_2": {
          "on_entry": [
            //"/say Size 1_2",
            "/playsound mob.wolf.bark @a ^0 ^0 ^0 1 1"
          ],
          "transitions": [
            {
              "loaded": "0"
            }
          ]
        },

        "spawn_1_4": {
          "on_entry": [
            //"/say Size 1_4",
            "/playsound mob.wolf.bark @a ^0 ^0 ^0 1 1"
          ],
          "transitions": [
            {
              "loaded": "0"
            }
          ]
        },

        "spawn_1_6": {
          "on_entry": [
            //"/say Size 1_6",
            "/playsound mob.wolf.bark @a ^0 ^0 ^0 1 1"
          ],
          "transitions": [
            {
              "loaded": "0"
            }
          ]
        },

        "spawn_1_8": {
          "on_entry": [
            //"/say Size 1_8",
            "/playsound mob.wolf.bark @a ^0 ^0 ^0 1 1"
          ],
          "transitions": [
            {
              "loaded": "0"
            }
          ]
        },

        "spawn_2_0": {
          "on_entry": [
            //"/say Size 2_0",
            "/playsound mob.wolf.howl @a ^0 ^0 ^0 4 1",
            "/tag @s add alpha"
          ],
          "transitions": [
            {
              "loaded": "0"
            }
          ]
        }
      }
    },






    //==========================================================
    //
    // Breeding Controller
    //
    //==========================================================
    "controller.animation.wolf_breeding.load": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [
            {
              "entering_love_state": "query.is_in_love"
            }
          ]
        },

        "entering_love_state": {
          "transitions": [
            {
              "send_event_var_1_0": "query.variant == 100"
            },
            {
              "send_event_var_1_2": "query.variant == 102"
            },
            {
              "send_event_var_1_4": "query.variant == 104"
            },
            {
              "send_event_var_1_6": "query.variant == 106"
            },
            {
              "send_event_var_1_8": "query.variant == 108"
            },
            {
              "send_event_var_2_0": "query.variant == 110"
            }
          ]
        },

        "send_event_var_1_0": {
          "on_entry": [
            //"/say send_event var 1_0!",
            "/event entity @s max:eEnter_love_state_as_var_1_0"
          ],
          "transitions": [
            {
              "love_state": "1"
            }
          ]
        },
        "send_event_var_1_2": {
          "on_entry": [
            //"/say send_event var 1_2!",
            "/event entity @s max:eEnter_love_state_as_var_1_2"
          ],
          "transitions": [
            {
              "love_state": "1"
            }
          ]
        },
        "send_event_var_1_4": {
          "on_entry": [
            //"/say send_event var 1_4!",
            "/event entity @s max:eEnter_love_state_as_var_1_4"
          ],
          "transitions": [
            {
              "love_state": "1"
            }
          ]
        },
        "send_event_var_1_6": {
          "on_entry": [
            //"/say send_event var 1_6!",
            "/event entity @s max:eEnter_love_state_as_var_1_6"
          ],
          "transitions": [
            {
              "love_state": "1"
            }
          ]
        },
        "send_event_var_1_8": {
          "on_entry": [
            //"/say send_event var 1_8!",
            "/event entity @s max:eEnter_love_state_as_var_1_8"
          ],
          "transitions": [
            {
              "love_state": "1"
            }
          ]
        },
        "send_event_var_2_0": {
          "on_entry": [
            //"/say send_event var 2_0!",
            "/event entity @s max:eEnter_love_state_as_var_2_0"
          ],
          "transitions": [
            {
              "love_state": "1"
            }
          ]
        },

        "love_state": {
          "on_entry": [
            "/tag @s add wolfLoveState"
          ],
          "transitions": [
            {
              "exit_love_state": "!query.is_in_love"
            },
            {
              "received_var_1_0": "query.mark_variant == 100"   //this variety for documentation purposes
            },
            {
              "received_var_1_2": "query.mark_variant == 102"
            },
            {
              "received_var_1_4": "query.mark_variant == 104"
            },
            {
              "received_var_1_6": "query.mark_variant == 106"
            },
            {
              "received_var_1_8": "query.mark_variant == 108"
            },
            {
              "received_var_2_0": "query.mark_variant == 110"
            }
          ]
        },

        "exit_love_state": {
          "on_entry": [
            //"/say exit_love_state",
            "/tag @s remove wolfLoveState",
            "/tag @s remove receivedMarkVar",
            "/event entity @s max:eLeave_love_state"
          ],
          "transitions": [
            {
              "default": "1"
            }
          ]
        },

        "received_var_1_0": {
          /*"on_entry": [
            "/say received var 1_0!"
          ],*/
          "transitions": [
            {
              "received_variant_love_state": "1"
            }
          ]
        },
        "received_var_1_2": {
          /*"on_entry": [
            "/say received var 1_2!"
          ],*/
          "transitions": [
            {
              "received_variant_love_state": "1"
            }
          ]
        },
        "received_var_1_4": {
          /*"on_entry": [
            "/say received var 1_4!"
          ],*/
          "transitions": [
            {
              "received_variant_love_state": "1"
            }
          ]
        },
        "received_var_1_6": {
          /*"on_entry": [
            "/say received var 1_6!"
          ],*/
          "transitions": [
            {
              "received_variant_love_state": "1"
            }
          ]
        },
        "received_var_1_8": {
          /*"on_entry": [
            "/say received var 1_8!"
          ],*/
          "transitions": [
            {
              "received_variant_love_state": "1"
            }
          ]
        },
        "received_var_2_0": {
          /*"on_entry": [
            "/say received var 2_0!"
          ],*/
          "transitions": [
            {
              "received_variant_love_state": "1"
            }
          ]
        },

        //Received others' variant, is in breeding behavior, but still need to transmit own variant to others
        "received_variant_love_state": {
          "on_entry": [
            "/tag @s add receivedMarkVar"
          ],
          "transitions": [
            {
              "exit_love_state": "!query.is_in_love"
            },
            {
              "transmit_var_0": "query.variant == 100"
            },
            {
              "transmit_var_2": "query.variant == 102"
            },
            {
              "transmit_var_4": "query.variant == 104"
            },
            {
              "transmit_var_6": "query.variant == 106"
            },
            {
              "transmit_var_8": "query.variant == 108"
            },
            {
              "transmit_var_10": "query.variant == 110"
            }
          ]
        },

        "transmit_var_0": {
          "on_entry": [
            //"/say sending var 1_0",
            "/event entity @e[family=wolf,tag=wolfLoveState,tag=!receivedMarkVar] max:eRecieve_variant_1_0"
          ],
          "transitions": [
            {
              "exit_love_state": "!query.is_in_love"
            },
            {
              "transmit_var_0_loop": "1"
            }
          ]
        },
        "transmit_var_0_loop": {
          "transitions": [
            {
              "transmit_var_0": "1"
            }
          ]
        },

        "transmit_var_2": {
          "on_entry": [
            //"/say sending var 1_2",
            "/event entity @e[family=wolf,tag=wolfLoveState,tag=!receivedMarkVar] max:eRecieve_variant_1_2"
          ],
          "transitions": [
            {
              "exit_love_state": "!query.is_in_love"
            },
            {
              "transmit_var_2_loop": "1"
            }
          ]
        },
        "transmit_var_2_loop": {
          "transitions": [
            {
              "transmit_var_2": "1"
            }
          ]
        },

        "transmit_var_4": {
          "on_entry": [
            //"/say sending var 1_4",
            "/event entity @e[family=wolf,tag=wolfLoveState,tag=!receivedMarkVar] max:eRecieve_variant_1_4"
          ],
          "transitions": [
            {
              "exit_love_state": "!query.is_in_love"
            },
            {
              "transmit_var_4_loop": "1"
            }
          ]
        },
        "transmit_var_4_loop": {
          "transitions": [
            {
              "transmit_var_4": "1"
            }
          ]
        },

        "transmit_var_6": {
          "on_entry": [
            //"/say sending var 1_6",
            "/event entity @e[family=wolf,tag=wolfLoveState,tag=!receivedMarkVar] max:eRecieve_variant_1_6"
          ],
          "transitions": [
            {
              "exit_love_state": "!query.is_in_love"
            },
            {
              "transmit_var_6_loop": "1"
            }
          ]
        },
        "transmit_var_6_loop": {
          "transitions": [
            {
              "transmit_var_6": "1"
            }
          ]
        },

        "transmit_var_8": {
          "on_entry": [
            //"/say sending var 1_8",
            "/event entity @e[family=wolf,tag=wolfLoveState,tag=!receivedMarkVar] max:eRecieve_variant_1_8"
          ],
          "transitions": [
            {
              "exit_love_state": "!query.is_in_love"
            },
            {
              "transmit_var_8_loop": "1"
            }
          ]
        },
        "transmit_var_8_loop": {
          "transitions": [
            {
              "transmit_var_8": "1"
            }
          ]
        },

        "transmit_var_10": {
          "on_entry": [
            //"/say sending var 2_0",
            "/event entity @e[family=wolf,tag=wolfLoveState,tag=!receivedMarkVar] max:eRecieve_variant_2_0"
          ],
          "transitions": [
            {
              "exit_love_state": "!query.is_in_love"
            },
            {
              "transmit_var_10_loop": "1"
            }
          ]
        },
        "transmit_var_10_loop": {
          "transitions": [
            {
              "transmit_var_10": "1"
            }
          ]
        }
      }
    },


    //Riding controller
    "controller.animation.wolf.riding": {
      "initial_state": "untamed",
      "states": {
        "untamed": {
          "transitions": [
            {
              "standing": "query.is_tamed && query.variant == 110"
            }
          ]
        },

        "standing": {
          "on_entry": [
            "/event entity @s max:eStandingControls",
            "/event entity @s max:eStandingSeating",
            "/event entity @s max:eHas_no_rider",
            "/ride @s evict_riders"/*,                  //on sit and stand, evict riders
            "/say Standing - no rider!"*/
          ],
          "transitions": [
            {
              "standing_with_rider": "query.has_rider"
            },
            {
              "sitting": "query.is_sitting"
            }
          ]
        },

        "standing_with_rider": {
          "on_entry": [
            "/event entity @s max:eHas_rider"/*,
            "/say Standing - rider!"*/
          ],
          "transitions": [
            {
              "standing": "!query.has_rider"
            },
            {
              "sprint_mode_with_rider": "query.is_sprinting"
            },
            {
              "sitting": "query.is_sitting"
            }
          ]
        },

        "sprint_mode_with_rider": {
          "on_entry": [
            "/clear @p bone 0 1"/*,     //Use up 1 item for the boost effect
            "/say Sprint Mode - rider!"*/
          ],
          "transitions": [
            {
              "standing_with_rider": "!query.is_sprinting"
            },
            {
              "sprinting_with_rider": "query.ground_speed >= 25"
            },
            {
              "sprint_mode_no_rider": "!query.has_rider"
            },
            {
              "sprint_mode_sitting": "query.is_sitting"
            }
          ]
        },

        "sprint_mode_no_rider": {
          "on_entry": [
            /*"/say Sprint Mode - no rider!",*/
            "@s max:eSprint_mode_no_rider_remove_movement" 
          ],
          "transitions": [
            {
              "standing": "!query.is_sprinting"
            },
            {
              "sprint_mode_with_rider": "query.has_rider"
            },
            {
              "sprint_mode_sitting": "query.is_sitting"
            }
          ],
          "on_exit": [
            "@s max:eSprint_mode_no_rider_return_movement"
          ]
        },

        "sprint_mode_sitting": {
          "on_entry": [
            //"/say Sitting - sprint mode!",    //should be unrideable in this state
            "@s max:eSitting_in_sprint_mode_no_seating",
            "/ride @s evict_riders"
          ],
          "transitions": [
            {
              "sitting": "!query.is_sprinting"
            },
            {
              "sprint_mode_no_rider": "!query.is_sitting"
            }
          ],
          "on_exit": [
            "@s max:eSitting_in_sprint_mode_return_seating"
          ]
        },

        "sprinting_with_rider": {
          "on_entry": [
            "@s max:eSprinting",
            "/event entity @p max:eSet_rider_sprinting_pose"/*,
            "/say Sprinting - rider!"*/
          ],
          "transitions": [
            {
              "standing": "!query.has_rider"
            },
            {
              "standing_with_rider": "!query.is_sprinting || query.ground_speed < 25"
            }
          ],
          "on_exit": [
            "@s max:eNot_sprinting",
            "/event entity @p max:eRemove_rider_sprinting_pose"
          ]
        },

        "sitting": {
          "on_entry": [
            "/event entity @s max:eSittingControls",
            "/event entity @s max:eSittingSeating",
            "/event entity @s max:eHas_no_rider",
            "/ride @s evict_riders"/*,                  //on sit and stand, evict riders
            "/say Sitting - no rider!"*/
          ],
          "transitions": [
            {
              "sitting_with_rider": "query.has_rider"
            },
            {
              "standing": "!query.is_sitting"
            }
          ]
        },

        "sitting_with_rider": {
          "on_entry": [
            "/event entity @s max:eHas_rider"/*,
            "/say Sitting - rider!"*/
          ],
          "transitions": [
            {
              "scoot_mode_with_rider_decrement_boost": "query.is_sprinting"
            },
            {
              "sitting": "!query.has_rider"
            },
            {
              "standing": "!query.is_sitting"
            }
          ]
        },

        "scoot_mode_with_rider_decrement_boost": {
          "on_entry": [
            "/clear @p rotten_flesh 0 1"
          ],
          "transitions": [
            {
              "scoot_mode_with_rider": "1"
            }
          ]
        },

        "scoot_mode_with_rider": {
          "on_entry": [
            //"/say Scoot mode - rider!",
            "/event entity @s max:eScoot_mode"
          ],
          "transitions": [
            {
              "scooting_with_rider": "query.ground_speed >= 4"
            },
            {
              "remove_scoot_mode_to_sitting_with_rider": "!query.is_sprinting"
            },
            {
              "scoot_mode_no_rider": "!query.has_rider"
            }
          ]
        },

        "scooting_with_rider": {
          "on_entry": [
            "/event entity @s max:eScoot_mode_scooting"/*,
            "/say Scooting - rider!"*/
          ],
          "transitions": [
            {
              "scoot_mode_no_rider": "!query.has_rider"
            },
            {
              "remove_scoot_mode_to_sitting_with_rider": "!query.is_sprinting"
            },
            {
              "scoot_mode_with_rider": "query.ground_speed < 4"
            }
          ],
          "on_exit": [
            "/event entity @s max:eScoot_mode_not_scooting"/*,
            "/say Not scooting - rider!"*/
          ]
        },

        "scoot_mode_no_rider": {
          "on_entry": [
            //"/say Scooting - no rider!",
            "/event entity @s max:eScoot_mode_no_rider_remove_movement"
          ],
          "transitions": [
            {
              "end_scoot_mode_to_sitting": "!query.is_sprinting" 
            },
            {
              "return_movement_to_scoot_mode_with_rider": "query.has_rider"
            }
          ]
        },

        "end_scoot_mode_to_sitting": {
          "on_entry": [
            "/event entity @s max:eNot_scoot_mode"
          ],
          "transitions": [
            {
              "sitting": "1"
            }
          ]
        },

        "return_movement_to_scoot_mode_with_rider": {
          "on_entry": [
            "/event entity @s max:eScoot_mode_no_rider_return_movement"
          ],
          "transitions": [
            {
              "scoot_mode_with_rider": "1"
            }
          ]
        },

        "remove_scoot_mode_to_sitting_with_rider": {
          "on_entry": [
            //"/say Not scoot mode - rider!",
            "/event entity @s max:eNot_scoot_mode"
          ],
          "transitions": [
            {
              "sitting_with_rider": "1"
            }
          ]
        }

      }  
    },


  }
}